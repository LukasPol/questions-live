<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= @post.url %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.first_name %>
</p>

<h4>Comentarios</h4>

<%= render "questions/form" %>

<% if @post.questions.length > 0 %>
  <%= render "questions/questions" %>
<% end %>

<% if @post.user == current_user %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>